{
  "name": "image-wrench",
  "description": "A collection of utility functions, mostly for image and color processing.",
  "private": true,
  "version": "1.0.1",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./image/resize": {
      "import": "./dist/image/resize.js"
    },
    "./image/generation": {
      "import": "./dist/image/generation.js"
    },
    "./image/metadata": {
      "import": "./dist/image/metadata.js"
    },
    "./image/data": {
      "import": "./dist/image/data.js"
    },
    "./color/sorting": {
      "import": "./dist/color/sorting.js"
    },
    "./color/processing": {
      "import": "./dist/color/processing.js"
    },
    "./data/file": {
      "import": "./dist/data/file.js"
    },
    "./data/base64": {
      "import": "./dist/data/base64.js"
    },
    "./services/logger": {
      "import": "./dist/services/logger.js"
    },
    "./types": {
      "types": "./dist/types/index.d.ts"
    },
    "./constants": {
      "import": "./dist/constants/index.js"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "postinstall": "npm run build",
    "preview": "vite preview",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "prepare": "husky",
    "test": "vitest",
    "test:cov": "vitest run --coverage",
    "type-check": "tsc --noEmit",
    "verify": "pnpm run lint && pnpm run format && pnpm run type-check",
    "prune-branches": "git branch --merged | grep -vE '^[*]|main$|develop$' | xargs -r git branch -d"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.30.1",
    "@types/node": "^24.0.12",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.1",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.36.0",
    "vite": "^7.0.3",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "**/*.{js,ts}": [
      "eslint --fix"
    ],
    "**/*": "prettier --write --ignore-unknown"
  },
  "packageManager": "pnpm@10.5.2",
  "dependencies": {
    "exifr": "^7.1.3",
    "pino": "^9.7.0",
    "zod": "^4.0.0"
  },
  "sideEffects": false
}
